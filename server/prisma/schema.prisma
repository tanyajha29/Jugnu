generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "postgresql"
}

enum LifePhase {
  STRESS
  LONELINESS
  ANXIETY
  CONFUSION
  LOW_MOTIVATION
  CALM
}

model User {
  id            Int        @id @default(autoincrement())
  name          String
  email         String     @unique
  password      String
  currentPhase  LifePhase?
  createdAt     DateTime   @default(now())
  moods         Mood[]
  reflections  Reflection[]
}

model Mood {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  value     Int      // e.g., 1-5 scale
  date      DateTime @default(now())
}
model Reflection {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  question  String
  answer    String
  date      DateTime @default(now())
}

model DailyMessage {
  id        Int      @id @default(autoincrement())
  phase     LifePhase   // Stress, Anxiety, etc.
  message   String
  createdAt DateTime @default(now())
}
